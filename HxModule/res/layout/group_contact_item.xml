<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/header_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ease_mm_listitem"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/contact_iv_icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/contact_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/contact_iv_icon"
            android:ellipsize="end"
            android:text="111"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/list_itease_primary_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/contact_iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/cm_iv_true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>