<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_lay_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ease_mm_listitem"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/head_iv1"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/em_create_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/head_iv1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="新建群"
            android:textColor="@color/list_itease_primary_color"
            android:textSize="16sp" />


    </RelativeLayout>

    <!--<View android:layout_width="match_parent"  android:layout_height="1px" android:background="@color/divider_list"/>-->

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:clickable="false"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="群列表"
        android:textColor="@color/list_itease_primary_color"
        android:textSize="15sp" />
</LinearLayout>