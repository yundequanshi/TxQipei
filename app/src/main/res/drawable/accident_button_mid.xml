<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_checked="true">
		<shape>
		    <solid android:color="@color/common_darker_gray" />
		</shape>        
    </item>
    <item android:state_checked="false">
		<shape>
		    <solid android:color="@color/common_gray" />
		    <stroke android:color="@color/common_darker_gray" android:width="0.1dp"/>
		</shape>        
    </item>
</selector>

