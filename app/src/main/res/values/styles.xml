<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>
    <!-- Application theme. -->
    <!-- <style name="AppTheme" parent="AppBaseTheme"> </style> -->

    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar"></style>

    <!-- ========================== 通用样式 ============================ -->
    <!-- 顶部标题栏 -->
    <style name="common_top_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/common_red</item>
    </style>

    <style name="common_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="common_top_next">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="common_top_back">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="common_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@color/cm_divider</item>
        <item name="android:dividerHeight">0.8dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- 字体 -->
    <style name="common_text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tv_size_body2</item>
    </style>

    <style name="common_text_small_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 输入框 -->
    <style name="common_et_user">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/tv_black1</item>
        <item name="android:textSize">@dimen/tv_size_body2</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 首页 -->
    <style name="home_et_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="my_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="home_ll_category">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_iv_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="home_tv_category">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/tv_black1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/tv_size_body3</item>
    </style>
    <!-- 事故车 -->

    <style name="accident_orange_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/tv_black1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/tv_black3</item>
    </style>

    <!-- 我的 -->
    <style name="my_text_protect">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">right|center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="add_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/tv_black1</item>
        <item name="android:textSize">@dimen/tv_size_body2</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!-- 我的好友 -->

    <style name="friend_bottom_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#7E7E7E</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="single_griditem_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#959595</item>
    </style>

    <style name="single_select_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#595959</item>
    </style>
    <!--购物车-->
    <style name="common_grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollbars">none</item>
    </style>
</resources>