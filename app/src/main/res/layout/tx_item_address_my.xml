<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_black1"
        android:textSize="@dimen/tv_size_body2"
        android:text="Medium Text"
        android:id="@+id/address_tv_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_black1"
        android:textSize="@dimen/tv_size_body2"
        android:text="电话"
        android:id="@+id/address_tv_phone"
        android:layout_alignBottom="@+id/address_tv_name"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_black1"
        android:textSize="@dimen/tv_size_body2"
        android:text="地址"
        android:layout_marginTop="10dp"
        android:id="@+id/address_tv_ad"
        android:layout_below="@+id/address_tv_name"
        android:layout_alignParentLeft="true" />
</RelativeLayout>