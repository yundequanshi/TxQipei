<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
         android:layout_width="280dp"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:padding="10dp"
         android:background="@drawable/bj_pj_add_bg"
         android:orientation="vertical">

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:text="@string/biz_quoted_pop_head_name2"
               android:textColor="@color/cm_tv_black1"
               android:textSize="@dimen/cm_tv_size_body2" />

            <ImageView
               android:id="@+id/iv_dismiss"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:scaleType="centerInside"
               android:src="@mipmap/bj_icon_close_pressed" />

         </RelativeLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
               android:id="@+id/tv_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:text="配件：名字"
               android:textColor="@color/cm_tv_black1"
               android:textSize="@dimen/cm_tv_size_body2" />

            <TextView
               android:id="@+id/tv_type_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:singleLine="true"
               android:text="类别：原厂"
               android:textColor="@color/cm_tv_black1"
               android:textSize="@dimen/cm_tv_size_body2" />

            <TextView
               android:id="@+id/tv_number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:singleLine="true"
               android:text="数量：0"
               android:textColor="@color/cm_tv_black1"
               android:textSize="@dimen/cm_tv_size_body2" />

            <EditText
               android:id="@+id/et_prcie"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_marginTop="10dp"
               android:background="@null"
               android:hint="@string/biz_quoted_pop_hint_quote"
               android:inputType="numberDecimal"
               android:singleLine="true"
               android:textColor="@color/cm_tv_black1"
               android:textSize="@dimen/cm_tv_size_body2" />

            <View style="@style/cm_line_horizontal" />


            <TextView
               android:id="@+id/tv_add"
               android:layout_width="200dp"
               android:layout_height="40dp"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/bj_btn_1"
               android:gravity="center"
               android:text="@string/biz_quoted_pop_btn"
               android:textColor="@color/cm_white"
               android:textSize="@dimen/cm_tv_size_subhead" />
         </LinearLayout>
      </LinearLayout>
   </RelativeLayout>
</LinearLayout>