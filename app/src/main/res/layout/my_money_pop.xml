<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
 <LinearLayout 
    android:id="@+id/login_ly_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_white" 
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
   >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="13dp"
       android:paddingBottom="10dp"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       >
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/common_blue"
       android:textSize="@dimen/tv_size_subhead"
       android:text="请选择"
       />



   </RelativeLayout>

   <ImageView
       android:layout_width="match_parent"
	   android:layout_height="0.5dp"
	   android:background="@drawable/cm_divider"
       />
	<EditText
    	android:id="@+id/my_et_input"
    	android:layout_width="match_parent"
    	android:layout_height="90dp"
    	android:gravity="top|left"
    	android:background="@null"
    	android:hint="请输入..."
    	android:inputType="number"
        android:textSize="@dimen/tv_size_body2"
        android:layout_margin="13dp"
    />
    </LinearLayout>

    <TextView
        android:id="@+id/login_city_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/login_ly_status"
        android:textColor="@color/common_white"
        android:background="@drawable/cm_btn_blue"
        android:textSize="@dimen/tv_size_subhead"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="确定"
        android:gravity="center"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xinxiguanbi"
        android:layout_alignTop="@id/login_ly_status"
        android:layout_alignRight="@id/login_ly_status"
        android:layout_marginRight="15dp"
        />

</RelativeLayout>
