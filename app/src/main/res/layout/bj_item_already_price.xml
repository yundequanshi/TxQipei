<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical">

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:orientation="vertical">

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="名字"
            android:textColor="@color/cm_tv_black1"
            android:textSize="@dimen/cm_tv_size_subhead" />

         <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未选中"
            android:textColor="@color/bj_biz_state1"
            android:textSize="@dimen/cm_tv_size_body3" />

      </RelativeLayout>

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp">

         <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="件数：0"
            android:textColor="@color/cm_tv_black3"
            android:textSize="@dimen/cm_tv_size_body3" />


         <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="2017.12.09"
            android:textColor="@color/cm_tv_black3"
            android:textSize="@dimen/cm_tv_size_body3" />

      </RelativeLayout>

   </LinearLayout>

</LinearLayout>