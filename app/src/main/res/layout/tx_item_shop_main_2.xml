<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:paddingTop="8dp"
      android:paddingLeft="10dp"
      android:background="@color/cm_white"
      android:orientation="horizontal">

      <ImageView
         android:id="@+id/shop_iv_icom"
         android:layout_width="120dp"
         android:layout_height="80dp"
         android:scaleType="centerCrop"
         android:src="@drawable/shop_default" />

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_toRightOf="@+id/shop_iv_icom"
         android:orientation="vertical">

         <TextView
            android:id="@+id/shop_tv_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:gravity="top|center_vertical"
            android:maxLines="2"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/shop_tv_name">

            <TextView
               android:id="@+id/shop_tv_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:singleLine="true"
               android:text="¥0"
               android:textColor="@color/shop_tv_price_main"
               android:textSize="@dimen/tv_size_subhead" />

            <TextView
               android:id="@+id/shop_tv_price_old"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="3dp"
               android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:layout_alignTop="@id/shop_tv_price"
               android:gravity="center_vertical"
               android:singleLine="true"
               android:text="¥0"
               android:textColor="@color/tv_black2"
               android:textSize="@dimen/tv_size_body2" />
         </RelativeLayout>

      </RelativeLayout>

      <View
         style="@style/cm_line_horizontal"
         android:layout_marginBottom="1dp"
         android:layout_marginLeft="8dp"
         android:layout_alignParentBottom="true"
         android:layout_toRightOf="@+id/shop_iv_icom" />

   </RelativeLayout>
</LinearLayout>