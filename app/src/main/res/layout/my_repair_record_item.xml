<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp" 
    android:id="@+id/mz_a_layout">

    <TextView
        android:id="@+id/repair_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="零件名称：宝马轮胎X324"
        android:textColor="@color/common_black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/repair_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repair_tv_name"
        android:gravity="center"
        android:text="保修时间：11月"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/common_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/repair_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repair_tv_name"
        android:layout_toRightOf="@id/repair_tv_time"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="价格：1499元"
        android:textColor="@color/common_orange"
        android:textSize="14sp" />

</RelativeLayout>