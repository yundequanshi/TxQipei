<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
 <LinearLayout 
    android:id="@+id/login_ly_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_white" 
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
   >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="13dp"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       >
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/common_blue"
       android:textSize="20sp"
       android:text="提现失败"
       />
    <TextView
        android:id="@+id/login_city_ok"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/common_blue"
       	android:textSize="20sp"
       	android:text="确定"
       	android:gravity="center|right"
       	android:layout_alignParentRight="true"
        />
   </RelativeLayout>

   <ImageView
       android:layout_width="match_parent"
	   android:layout_height="2dp"
	   android:background="@drawable/common_dialog_divider"
       />
   <TextView
       android:id="@+id/tv_order"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
	   android:layout_marginLeft="20dp"
	   android:layout_marginTop="10dp"
       android:text="订单号 : 3423423432"
       android:textColor="@color/common_black"
       android:textSize="18sp"
       />
    <TextView
       android:id="@+id/tv_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
	   android:layout_marginLeft="20dp"
	   android:layout_marginTop="10dp"
       android:text="名  称 : 济南东方汽配"
       android:textColor="@color/common_black"
       android:textSize="18sp"
       />
       <TextView
       android:id="@+id/tv_money"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
	   android:layout_marginLeft="20dp"
	   android:layout_marginTop="10dp"
       android:text="金  额 : 300元"
       android:textColor="@color/common_black"
       android:textSize="18sp"
       />
     <TextView
       android:id="@+id/tv_time"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
	   android:layout_marginLeft="20dp"
	   android:layout_marginTop="10dp"
       android:text="时  间 : 6月8日"
       android:textColor="@color/common_black"
       android:textSize="18sp"
       />
          <TextView
       android:id="@+id/tv_content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
	   android:layout_marginLeft="20dp"
	   android:layout_marginTop="10dp"
       android:text="原  因 : 账户已被冻结，请联系客服人员。电话:0531-8987625"
       android:textColor="@color/common_black"
       android:textSize="18sp"
       android:layout_marginBottom="15dp"
       />
    </LinearLayout>
</RelativeLayout>
