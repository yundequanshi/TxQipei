<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/common_white"
    >  
     <!-- 标题 -->
<RelativeLayout
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/common_blue"
    >
        <ImageView
        android:id="@+id/top_back"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/common_back"
        android:scaleType="centerInside"
        android:paddingRight="20dp"
        />
    <TextView
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易评论"
        android:layout_centerInParent="true"
        android:textColor="@color/common_white"
        android:textSize="23sp"
        />
       <Button
        android:id="@+id/money_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:text="确定"
        android:textColor="@color/common_white"
        android:textSize="19sp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        />
</RelativeLayout>
 <RelativeLayout
       android:id="@+id/accident_ly_search"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/top_bar"
       >
      <EditText
          android:id="@+id/comment_et"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_margin="10dp"
          android:hint="请输入评价内容..."
          android:gravity="left|top"
          />
   	 <Button
        android:id="@+id/money_btn_good"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/common_orange"
        android:text="好评"
        android:layout_below="@id/comment_et"
        android:textColor="@color/common_white"
        android:textSize="19sp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        />
   	  <Button
        android:id="@+id/money_btn_bad"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/comment_et"
        android:text="差评"
          android:background="@color/common_gray"
        android:textColor="@color/common_black"
        android:textSize="19sp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        />
</RelativeLayout>

</LinearLayout>
