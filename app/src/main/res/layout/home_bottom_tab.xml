<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/tab_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tab_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:textColor="@color/tv_black1"
        android:textSize="12sp" />
    <!-- android:background="@drawable/home_message_bg" -->

    <RelativeLayout
        android:id="@+id/tab_lv_count"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignRight="@+id/tab_iv_icon"
        android:layout_alignTop="@+id/tab_iv_icon"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="-11dp"
        android:visibility="invisible"
        android:background="@drawable/home_message_bg"
        >
           <TextView
                 android:id="@+id/tab_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="25"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textColor="@color/common_white"
        android:textSize="11sp" />
    </RelativeLayout>

 

</RelativeLayout>