<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_layout_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--标题 -->
    <RelativeLayout
        android:id="@+id/rl_titlebar"
        style="@style/topbar_layout">

        <ImageButton
            android:id="@+id/business_titlebar_tv_left"
            style="@style/topbar_btn_left"
            android:src="@drawable/cm_back_btn" />

        <TextView
            android:id="@+id/titlebar_tv"
            style="@style/topbar_title"
            android:layout_centerInParent="true"
            android:text="群" />

        <ImageButton
            android:id="@+id/titlebar_btn_right"
            style="@style/topbar_btn_right"
            android:background="@null"
            android:src="@drawable/em_add" />
    </RelativeLayout>

    <ListView
        android:id="@+id/group_lv"
        style="@style/cm_list_view" />
</LinearLayout>