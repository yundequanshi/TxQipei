        android:layout_toRightOf="@id/stock_iv_icon"
        android:textSize="14sp" 
        android:paddingTop="5dp"/>
      
        <TextView
        android:id="@+id/stock_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
