<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:ml="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <!--  -->

   <LinearLayout
      android:id="@+id/login_ly_status"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_centerInParent="true"
      android:background="@color/common_white"
      android:orientation="vertical">

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="+ 请输入汽修信息"
            android:textColor="@color/common_blue"
            android:textSize="16sp" />

         <Button
            android:id="@+id/xinxiguanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/xinxiguanbi" />
      </RelativeLayout>

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/cm_divider" />

      <LinearLayout
         android:id="@+id/repair_part"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:paddingLeft="6dp"
         android:paddingRight="6dp">

         <TextView
            android:id="@+id/pop_tv_label1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="名称"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pop_tv_label1"
            android:background="#989898" />

         <EditText
            android:id="@+id/repair_et_part"
            style="@style/add_et"
            android:hint="请输入零件名称" />
      </LinearLayout>

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/cm_divider" />

      <LinearLayout
         android:id="@+id/repair_keepTime"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:paddingLeft="6dp"
         android:paddingRight="6dp">

         <TextView
            android:id="@+id/pop_tv_label3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pop_tv_label3"
            android:background="#989898" />

         <EditText
            android:id="@+id/repair_et_keepTime"
            style="@style/add_et"
            android:hint="请输入保修时间"
            android:inputType="number" />
      </LinearLayout>

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/cm_divider" />

      <LinearLayout
         android:id="@+id/repair_price"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:paddingLeft="6dp"
         android:paddingRight="6dp">

         <TextView
            android:id="@+id/pop_tv_label2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pop_tv_label2"
            android:background="#989898" />

         <EditText
            android:id="@+id/repair_et_price"
            style="@style/add_et"
            android:hint="请输入零件价格"
            android:inputType="number" />
      </LinearLayout>
   </LinearLayout>

   <Button
      android:id="@+id/repair_ok"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_below="@id/login_ly_status"
      android:background="@color/cm_font_blue1"
      android:gravity="center"
      android:text="保存信息"
      android:textColor="@color/white"
      android:textSize="20sp" />

</RelativeLayout>