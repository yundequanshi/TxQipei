<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:ml="http://schemas.android.com/apk/res-auto"
   android:id="@+id/rl_root"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <!--  -->

   <LinearLayout
      android:id="@+id/login_ly_status"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_centerInParent="true"
      android:background="@color/common_white"
      android:orientation="vertical">

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="+ 请输入进货信息"
            android:textColor="@color/common_blue"
            android:textSize="16sp" />

         <Button
            android:id="@+id/xinxiguanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/xinxiguanbi" />
      </RelativeLayout>

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/cm_divider" />

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:paddingLeft="6dp"
         android:paddingRight="6dp">

         <TextView
            android:id="@+id/pop_tv_label1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="名称"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pop_tv_label1"
            android:background="#989898" />

         <EditText
            android:id="@+id/et_part"
            style="@style/add_et"
            android:layout_toRightOf="@id/pop_tv_label1"
            android:paddingRight="10dp"
            android:gravity="right|center_vertical"
            android:hint="请输入产品名称" />
      </RelativeLayout>

      <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@drawable/cm_divider" />

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:paddingLeft="6dp"
         android:paddingRight="6dp">

         <TextView
            android:id="@+id/pop_tv_label3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pop_tv_label3"
            android:background="#989898" />

         <EditText
            android:id="@+id/et_count"
            style="@style/add_et"
            android:layout_toRightOf="@id/pop_tv_label3"
            android:paddingRight="10dp"
            android:gravity="right|center_vertical"
            android:hint="请输入产品数量"
            android:inputType="number"
            android:maxLength="5" />
      </RelativeLayout>

      <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@drawable/cm_divider" />

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:paddingLeft="6dp"
         android:paddingRight="6dp">

         <TextView
            android:id="@+id/pop_tv_label4"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pop_tv_label4"
            android:background="#989898" />

         <EditText
            android:id="@+id/et_price"
            style="@style/add_et"
            android:layout_toRightOf="@id/pop_tv_label4"
            android:paddingRight="10dp"
            android:gravity="right|center_vertical"
            android:hint="请输入产品价格"
            android:inputType="number"
            android:maxLength="5" />
      </RelativeLayout>

      <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@drawable/cm_divider" />

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:visibility="gone">

         <TextView
            android:id="@+id/pop_tv_label2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="质量"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2" />

         <Button
            android:id="@+id/bt_zhiliang"
            style="@style/add_et"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/pop_tv_label2"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next"
            android:gravity="right|center_vertical"
            android:hint="质量"
            android:textColor="@color/tv_black1" />
      </RelativeLayout>
   </LinearLayout>

   <TextView
      android:id="@+id/stock_ok"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_below="@id/login_ly_status"
      android:background="@color/cm_font_blue1"
      android:gravity="center"
      android:text="保存信息"
      android:textColor="@color/white"
      android:textSize="20sp" />

   <LinearLayout
      android:id="@+id/ly_status"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_alignParentBottom="true"
      android:background="@color/common_white"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone">

      <Button
         android:id="@+id/btn_zp"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:background="@null"
         android:gravity="center"
         android:text="正品"
         android:textColor="@color/common_blue"
         android:textSize="18sp" />

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@drawable/common_divider" />

      <Button
         android:id="@+id/btn_fp"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:background="@null"
         android:gravity="center"
         android:text="副品"
         android:textColor="@color/common_blue"
         android:textSize="18sp" />

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@drawable/common_divider" />

      <Button
         android:id="@+id/btn_gf"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:background="@null"
         android:gravity="center"
         android:text="高仿"
         android:textColor="@color/common_blue"
         android:textSize="18sp" />
   </LinearLayout>

</RelativeLayout>