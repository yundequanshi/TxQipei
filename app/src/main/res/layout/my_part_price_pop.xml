<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:ml="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
 <LinearLayout 
    android:id="@+id/login_ly_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_white" 
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
   >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="13dp"
       android:paddingBottom="10dp"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       >
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/common_blue"
       android:textSize="20sp"
       android:text="请选择"
       />
    <TextView
        android:id="@+id/login_city_ok"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/common_blue"
       	android:textSize="20sp"
       	android:text="确定"
       	android:gravity="center|right"
       	android:layout_alignParentRight="true"
        />
   </RelativeLayout>

   <ImageView
       android:layout_width="match_parent"
	   android:layout_height="2dp"
	   android:background="@drawable/common_dialog_divider"
       />
   
       <TextView
        android:id="@+id/tv_part_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_red"
       	android:textSize="20sp"
       	android:text="商品标题"
       	android:layout_marginTop="10dp"
       	android:layout_marginLeft="12dp"
       	android:layout_marginBottom="10dp"
       	android:gravity="center|right"
        />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@drawable/common_divider"
    />     
    
<com.zuomei.widget.MLLineLayout 
		android:layout_width="match_parent"
		android:layout_height="60dp"
		ml:text="正厂价格:"
>
     <EditText
         android:id="@+id/et_price1"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:hint="请输入正厂价格"
         android:textColor="@color/common_darker_gray"
         android:layout_marginLeft="120dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:background="@null"
         android:singleLine="true"
         android:maxLength="6"
         android:inputType="numberDecimal"
         android:gravity="center_vertical"
         />
     
 </com.zuomei.widget.MLLineLayout>
 <com.zuomei.widget.MLLineLayout 
		android:layout_width="match_parent"
		android:layout_height="60dp"
		ml:text="副厂价格:"
>
     <EditText
         android:id="@+id/et_price2"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:hint="请输入副厂价格"
         android:textColor="@color/common_darker_gray"
         android:layout_marginLeft="120dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:background="@null"
         android:singleLine="true"
         android:maxLength="6"
         android:inputType="numberDecimal"
         android:gravity="center_vertical"
         />
     
 </com.zuomei.widget.MLLineLayout>
<EditText
         android:id="@+id/et_content"
         android:layout_width="match_parent"
         android:layout_height="120dp"
         android:hint="请填写配件备注..."
         android:textColor="@color/common_darker_gray"
         android:layout_centerVertical="true"
         android:gravity="left|top"
         		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:maxLength="50"
         />
    </LinearLayout>
</RelativeLayout>
