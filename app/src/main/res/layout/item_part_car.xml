<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/part_iv_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/test3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/part_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Small Text"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_subhead" />

        <TextView
            android:id="@+id/part_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拨打次数：98次"
            android:textColor="@color/tv_black2"
            android:textSize="@dimen/tv_size_body2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/part_tv_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="Small Text"
            android:textColor="@color/cm_font_blue"
            android:textSize="@dimen/tv_size_body2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/item_part_car_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/yijianboda"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/tv_black1"
                android:textSize="@dimen/tv_size_body2" />
            <TextView
                android:id="@+id/part_tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@id/item_part_car_call"
                android:text="Small Text"
                android:textColor="@color/tv_black2"
                android:textSize="@dimen/tv_size_body2" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>