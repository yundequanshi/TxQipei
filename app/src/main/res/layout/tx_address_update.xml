<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"

    >


    <RelativeLayout
        android:id="@+id/topbar"
        style="@style/topbar_layout">
        <ImageButton
            android:id="@+id/top_btn_left"
            style="@style/topbar_btn_left"
            android:src="@drawable/qp_cm_btn_back" />
        <TextView
            android:id="@+id/top_tv_title"
            style="@style/topbar_title"
            android:layout_centerInParent="true"
            android:text="修改地址" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text="保存"
            android:textColor="@color/common_white"
            android:textSize="@dimen/tv_size_body2"
            android:gravity="center"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/topbar"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="姓名"
            android:gravity="left|center_vertical"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/cm_line_vertical1"
            android:drawablePadding="10dp"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="right|center"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:textSize="@dimen/tv_size_body2"
            android:textColor="@color/tv_black1"
            android:background="@null"
            android:hint="亲，请输入姓名"
            android:paddingRight="10dp"
            />
    </RelativeLayout>

    <View style="@style/cm_divider"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="联系电话"
            android:gravity="left|center_vertical"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/cm_line_vertical1"
            android:drawablePadding="10dp"
            />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="right|center"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:textSize="@dimen/tv_size_body2"
            android:textColor="@color/tv_black1"
            android:background="@null"
            android:hint="亲，请输入联系电话"
            android:paddingRight="10dp"
            />
    </RelativeLayout>

    <View style="@style/cm_divider"/>



    <RelativeLayout
        android:id="@+id/address_rl_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="地区"
            android:gravity="left|center_vertical"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/cm_line_vertical1"
            android:drawablePadding="10dp"
            />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:contentDescription="2015-05-16"
            android:gravity="right|center_vertical"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/list_back"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <View style="@style/cm_divider"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="详细地址"
            android:gravity="left|center_vertical"
            android:textColor="@color/tv_black1"
            android:textSize="@dimen/tv_size_body2"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/cm_line_vertical1"
            android:drawablePadding="10dp"
            />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="right|center"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:textSize="@dimen/tv_size_body2"
            android:textColor="@color/tv_black1"
            android:background="@null"
            android:hint="亲，请输入详细地址"
            android:paddingRight="10dp"
            />
    </RelativeLayout>
    <View style="@style/cm_divider"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/cm_bg_layout"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设为默认"
            android:textColor="@color/common_white"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FC9202"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/tv_size_subhead"
            />


        <TextView
            android:id="@+id/detail_tv_del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="删除"
            android:layout_marginLeft="10dp"
            android:textColor="@color/common_white"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FE5200"
            android:textSize="@dimen/tv_size_subhead"
            />

    </LinearLayout>
</RelativeLayout>