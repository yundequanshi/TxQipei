<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accident_add_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:paddingLeft="20dp"
    android:paddingBottom="1dp">
 <TextView
     	android:id="@+id/part_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="保时捷卡宴2013款"
         android:textColor="@color/common_black"
         android:gravity="center"
         android:textSize="17sp"
         android:layout_marginTop="2dp"
         />
 
 <ImageView
     android:id="@+id/patr_state"
     android:layout_width="60dp"
     android:layout_height="wrap_content"
     android:background="@drawable/part_state_1"
     android:layout_alignParentRight="true"
     android:layout_alignTop="@id/part_name"
     android:layout_marginTop="5dp"
     />
 
  <TextView
     	android:id="@+id/part_cartype"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="车   型：保时捷"
         android:textColor="@color/common_darker_gray"
         android:gravity="center"
         android:textSize="15sp"
         android:layout_marginTop="2dp"
         android:layout_below="@id/part_name"
         />
    <TextView
     	android:id="@+id/part_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/part_cartype"
         android:textColor="@color/common_darker_gray"
         android:gravity="center"
            android:layout_marginTop="2dp"
         android:textSize="15sp"
         />
  
 <TextView
        android:id="@+id/part_count"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:gravity="center"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@id/part_time"
         android:textColor="@color/common_black"
         android:textSize="16sp"
            android:layout_marginTop="2dp"
         android:layout_marginRight="10dp"
         />
</RelativeLayout>
