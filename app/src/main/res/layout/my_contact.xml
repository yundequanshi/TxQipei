<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_register_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/common_white"
    >
 <!-- 标题 -->
<RelativeLayout
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/common_blue"
    >
    <ImageView
        android:id="@+id/top_back"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/common_back"
        android:scaleType="centerInside"
        android:paddingRight="20dp"
        />
    <TextView
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系我们"
        android:layout_centerInParent="true"
        android:textColor="@color/common_white"
        android:textSize="23sp"
        />
</RelativeLayout>
   <TextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端下载"
        android:layout_below="@id/top_bar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_black"
        android:textSize="20sp"
        />
  <ImageView
        android:id="@+id/iv_android"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
         android:layout_below="@id/tv_contact"
        android:src="@drawable/test6"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        />
  <!-- <ImageView
        android:id="@+id/iv_ios"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/iv_android"
        android:src="@drawable/test6"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        /> -->
   <TextView
        android:id="@+id/tv_android"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Android"
        android:layout_below="@id/iv_android"
        android:layout_alignLeft="@id/iv_android"
        android:gravity="center"
        android:layout_marginTop="5dp"
          android:layout_centerHorizontal="true"
        android:textColor="@color/common_black"
        android:textSize="18sp"
        android:visibility="gone"
        />
<!--    <TextView
        android:id="@+id/tv_ios"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="IOS"
        android:layout_below="@id/iv_ios"
        android:layout_alignLeft="@id/iv_ios"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/common_black" 
        android:textSize="18sp"
        />
    -->
    <TextView
        android:id="@+id/tv_tody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_android"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/common_black"
        android:textSize="20sp"
        />
     <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tody"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/common_black"
        android:textSize="20sp"
        />
     
       <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_all"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/common_black"
        android:textSize="20sp"
        />
     
    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright ©2014-2016 \n济南德润广告传媒有限公司"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/common_darker_gray"
        android:textSize="18sp"
        />
   <Button
         android:id="@+id/btn_call"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="20dp"
    	 android:layout_marginRight="20dp"
    	 android:layout_above="@id/tv_copyright"
    	 android:background="@drawable/login_btn"
    	 android:gravity="center"
    	 android:textColor="@color/common_white"
    	 android:textSize="18sp"
         />  
   <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
    	 android:layout_marginRight="20dp"
    	 android:layout_marginBottom="10dp"
        android:textColor="@color/common_black"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_above="@id/btn_call"
        />
</RelativeLayout>
