<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/login_bg"
    >
 <!-- 标题 -->
<RelativeLayout
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/common_blue"
    >
    <ImageView
        android:id="@+id/my_top_back"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/common_back"
        android:scaleType="centerInside"
        android:paddingRight="20dp"
        />
    <TextView
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码修改"
        android:layout_centerInParent="true"
        android:textColor="@color/common_white"
        android:textSize="23sp"
        />
</RelativeLayout>

<!-- 信息框 -->

<LinearLayout
    android:id="@+id/login_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="30dp"
    android:layout_below="@id/top_bar"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    >
  <!-- 原密码 -->
  <LinearLayout
      android:id="@+id/login_layout1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:gravity="center"
      android:background="@drawable/cm_side_w"
      >
      <TextView
         style="@style/common_text_small"
         android:text="   原密码"
         android:layout_marginLeft="17dp"
          />
      <EditText
          android:id="@+id/my_et_old"
          style="@style/common_et_user"
          android:layout_marginLeft="15dp"
          android:hint="请输入密码"
          android:inputType="textPassword"
          />
  </LinearLayout>  

   <!-- 新密码 -->  
     <LinearLayout
      android:id="@+id/login_layout2"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:gravity="center"
         android:layout_marginTop="10dp"
         android:background="@drawable/cm_side_w"
      >
      <TextView
         style="@style/common_text_small"
         android:text="   新密码"
         android:layout_marginLeft="17dp"
          />
      <EditText
          android:id="@+id/my_et_pw"
          style="@style/common_et_user"
          android:layout_marginLeft="15dp"
          android:hint="请输入密码"
           android:inputType="textPassword"
          />
  </LinearLayout>  

    
 <!-- 重复密码 -->  
     <LinearLayout
      android:id="@+id/login_layout3"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:gravity="center"
         android:layout_marginTop="10dp"
         android:background="@drawable/cm_side_w"
      >
      <TextView
         style="@style/common_text_small"
         android:text="重复密码"
         android:layout_marginLeft="17dp"
          />
      <EditText
          android:id="@+id/my_et_pw1"
          style="@style/common_et_user"
          android:layout_marginLeft="15dp"
          android:hint="请输入密码"
           android:inputType="textPassword"
          />
  </LinearLayout>  
</LinearLayout>
<Button
         android:id="@+id/my_btn_ok"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_below="@id/login_info"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
    	 android:layout_marginRight="20dp"
    	 android:background="@drawable/cm_btn_blue"
    	 android:text="确定"
    	 android:gravity="center"
    	 android:textColor="@color/common_white"
    	 android:textSize="18sp"
         />  
 

</RelativeLayout>
