<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
 <LinearLayout 
    android:id="@+id/login_ly_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_white" 
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
   >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="13dp"
       android:paddingBottom="10dp"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       >
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/common_blue"
       android:textSize="20sp"
       android:text="请选择"
       />
    <TextView
        android:id="@+id/login_city_ok"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/common_blue"
       	android:textSize="20sp"
       	android:text="确定"
       	android:gravity="center|right"
       	android:layout_alignParentRight="true"
        />
   </RelativeLayout>

   <ImageView
       android:layout_width="match_parent"
	   android:layout_height="2dp"
	   android:background="@drawable/common_dialog_divider"
       />
 <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="1dp" 
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        
        	    <com.zuomei.widget.wheel.WheelView
	        android:id="@+id/wheel_year"
	        android:layout_width="90dp"
	        android:layout_height="200dp"
	        android:layout_marginLeft="2dp"/>
	   
	    <com.zuomei.widget.wheel.WheelView
	        android:id="@+id/wheel_month"
	        android:layout_width="90dp"
	        android:layout_height="200dp"
	        android:layout_marginLeft="2dp"/>
	  
 <com.zuomei.widget.wheel.WheelView
	        android:id="@+id/wheel_date"
	        android:layout_width="90dp"
	        android:layout_height="200dp"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>