<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
 <LinearLayout 
    android:id="@+id/login_ly_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_white" 
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
   >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="13dp"
       android:paddingBottom="10dp"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       >
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/common_blue"
       android:textSize="20sp"
       android:text="请选择"
       />
    <TextView
        android:id="@+id/login_city_ok"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/common_blue"
       	android:textSize="20sp"
       	android:text="确定"
       	android:gravity="center|right"
       	android:layout_alignParentRight="true"
        />
   </RelativeLayout>

   <ImageView
       android:layout_width="match_parent"
	   android:layout_height="2dp"
	   android:background="@drawable/common_dialog_divider"
       />
   
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_marginLeft="15dp"
       >
       <TextView
           android:id="@+id/tv_phone1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="电话一:"
           android:textColor="@color/common_black"
           android:textSize="18sp"
           android:layout_centerVertical="true"
           />
       <EditText
    	android:id="@+id/my_et_phone1"
    	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="@null"
    	android:layout_toRightOf="@id/tv_phone1"
    	android:hint="请输入..."
    	android:inputType="number"
    	android:gravity="left|center"
        android:textSize="18sp"
        android:layout_margin="10dp"
    />
   </RelativeLayout>
	
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_marginLeft="15dp"
       >
       <TextView
           android:id="@+id/tv_phone2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="电话二:"
           android:textColor="@color/common_black"
           android:textSize="18sp"
           android:layout_centerVertical="true"
           />
       <EditText
    	android:id="@+id/my_et_phone2"
    	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="@null"
    	android:layout_toRightOf="@id/tv_phone2"
    	android:hint="请输入..."
    	android:inputType="number"
    	android:gravity="left|center"
        android:textSize="18sp"
        android:layout_margin="10dp"
    />
   </RelativeLayout>
   
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_marginLeft="15dp"
       >
       <TextView
           android:id="@+id/tv_phone3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="电话三:"
           android:textColor="@color/common_black"
           android:textSize="18sp"
           android:layout_centerVertical="true"
           />
       <EditText
    	android:id="@+id/my_et_phone3"
    	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:inputType="number"
    	android:background="@null"
    	android:layout_toRightOf="@id/tv_phone3"
    	android:hint="请输入..."
    	android:gravity="left|center"
        android:textSize="18sp"
        android:layout_margin="10dp"
    />
   </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
